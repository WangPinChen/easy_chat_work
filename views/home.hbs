<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
  axios.get('/api/user')
    .then(res => console.log(res.data))

  const modal = document.getElementById("myModal")
  const faUserGear = document.querySelector('.fa-user-gear')
  const closeBtn = document.getElementsByClassName("close")[0]
  const backgroundInput = document.querySelector('.background-input')
  const avatarInput = document.querySelector('.avatar-input')

  faUserGear.onclick = function () {
    modal.style.display = "block"
  }

  closeBtn.onclick = function () {
    modal.style.display = "none"
  }

  window.onclick = function (event) {
    if (event.target == modal) {
      modal.style.display = "none"
    }
  }

  function changeImage(e) {
    if (e.target === backgroundInput) {
      document.querySelector('.background-img').src = URL.createObjectURL(backgroundInput.files[0])
    }

    if (e.target === avatarInput) {
      document.querySelector('.avatar-img').src = URL.createObjectURL(avatarInput.files[0])
    }
  }
  backgroundInput.addEventListener('change', changeImage)
  avatarInput.addEventListener('change', changeImage)

</script>