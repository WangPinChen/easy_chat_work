<style>
  .alert {
    border-radius: 15px;
    margin: 2rem 0;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 25%;
    background-color: rgba(255, 255, 255, 0.75);
    position: absolute;
    transform: translate(-50%, -50%);
    top: 5%;
    left: 50%;
    opacity: 1;
    transition: opacity 2s ease;
    z-index: 1;
  }

  .alert-success {
    border: 1px solid #018ffd;
  }

  .alert-warning {
    border: 1px solid #d93b3b;
  }

  .message-content {
    display: flex;
    align-items: center;
  }

  .alert .fa-circle-check {
    font-size: 1.75rem;
    color: #018ffd;
    margin-right: 0.5rem;
  }

  .alert .fa-triangle-exclamation {
    font-size: 1.75rem;
    color: #d93b3b;
    margin-right: 0.5rem;
  }

  .alert .fa-xmark {
    cursor: pointer;
  }

  @media screen and (max-width: 768px) {
    .alert {
      min-width: 285px;
    }
  }
</style>
{{#if success_msg}}
<div class="alert alert-success alert-dismissible" role="alert">
  <div class="message-content">
    <i class="fa-regular fa-circle-check"></i>
    <div>{{success_msg}} </div>
  </div>
  <i class="fa-solid fa-xmark"></i>
</div>
{{/if}}

{{#if warning_msg}}
<div class="alert alert-warning alert-dismissible" role="alert">
  <div class="message-content">
    <i class="fa-solid fa-triangle-exclamation"></i>
    <div>{{warning_msg}} </div>
  </div>
  <i class="fa-solid fa-xmark"></i>
</div>
{{/if}}


<script>
  const alert = document.querySelector('.alert')
  if (alert !== null) {
    //3秒後透過opacity效果隱藏訊息
    setTimeout(() => {
      alert.style.opacity = "0"
    }, 3000)
    //點選'X'關閉訊息
    const faXmark = document.querySelector('.fa-xmark')
    function closeMsg() {
      document.querySelector('.alert').remove()
    }
    faXmark.addEventListener('click', closeMsg)
  }
</script>